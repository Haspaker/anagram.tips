@import url(http://fonts.googleapis.com/css?family=VT323)
@import url(http://fonts.googleapis.com/css?family=Ubuntu+Mono:400,700|Cousine:400,700|VT323|Share+Tech+Mono&subset=latin,cyrillic-ext,cyrillic,vietnamese,greek-ext,greek,latin-ext)

$darkest-blue: #158fb3
$darker-blue: #20bae7
$lighter-blue: #59cdee
$lightest-blue: #92dff4

$darkest-green: #16b25c
$darker-green: #22e67a
$lighter-green: #5aed9c
$lightest-green: #92f4be

$mismatch-color: #FF4400 // Red orange

body
	// A circular gradient going from light to dark blue
	background: -webkit-radial-gradient(center, ellipse cover, $darker-blue 50%, $darkest-blue 100%)


#find, #validate
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0

// We cannot use CSS transitions with radial-gradient
// Instead, we create a hidden second background that completely covers the window
// When we want to change the color of the body's radial-gradient background, ...
// ... we fade in this false background by changing the opacity to 1
#green-background

	// A circular gradient going from light to dark green
	background: -webkit-radial-gradient(center, ellipse cover, $darker-green 50%, $darkest-green 100%)

	// Completely cover the window's background from edge to edge
	position: fixed
	top: 0
	bottom: 0
	left: 0
	right: 0

	opacity: 0 // Hide this until we want to change background color

	// By default, elements with position:fixed will be placed in front ...
	// ... of elements with position:static. To prevent this, we could either ...
	// ... change the 'position' of all succeeding elements to 'relative' ...
	// ... or set a negative z-index on this element. The latter is less complicated.
	z-index: -1

	-webkit-transition: opacity 0.33s // Slowly fade in this background when needed

.logo
	display: block // The margin:auto trick only works on block elements
	margin: auto // Position the logo in the center of the screen ...
	margin-top: 150px // ... 150px below the edge

.mismatch
	color: $mismatch-color

.guide
	
	width: 475px // About the same width as the logo

	display: block
	margin: auto // Position in the center of the screen ...
	padding-top: 25px // ... 25px below the logo

	color: white
	text-align: center
	letter-spacing: 2px
	font-size: 14
	font-family: "Courier New"

	.mismatch
		font-weight: bold // The off-color text is more readable if it is bold


.field-container

	padding-top: 25px // Position 25px below the guide

	text-align: center // Centers all inline-block children
	width: 100% // The center of this element will also be the center of the screen

	& > *
		// All children (fields and buttons) should be centered and on a single line
		// Therefore, all children should be inline-block
		display: inline-block
		// Vertically center all elements relative to each other
		vertical-align: middle

	.anagram-field

		display: inline-block // The fields should rest beside each other
	
		width: 200px
		height: 25px

		padding: 1px 5px
		margin: 0px 5px
	
		background: $lightest-blue
		-webkit-border-radius: 5px
	
		color: darken($darkest-blue, 40%)
		font-size: 20px
		font-family: 'Share Tech Mono'
		font-weight: bold

		line-height: 25px // Same as height = centers the text vertically
		white-space: nowrap // Keep all text on a single line
		overflow: hidden // If the text is longer than the field, hide the excess
	
		-webkit-box-shadow: 2px 2px 3px $darkest-blue
	
		outline: none // Prevents ugly selection outline when editing the contents of the field

		// Slowly change the colors of the box when needed
		//-webkit-transition: background-color 0.33s, color 0.33s

	.button

		opacity: 0.8 // Looks nice

		// Prevent the buttons from being text-selected by accident ('cause it looks ugly)
		-webkit-user-select: none

		&.disabled
			opacity: 0.2 // Indicates that the button is disabled

.suggestions
	width: 100%
	margin-top: 30px
	text-align: center
	font-style: italic
	color: $lightest-blue
	text-align: center
	letter-spacing: 2px
	font-size: 14
	font-family: "Courier New"
	-webkit-transition: opacity 0.33s, color 0.33s
	& > *
		margin-bottom: 15px
	.suggested-words
		padding-top: 10px
		font-size: 20px
		font-style: normal
	.original
		font-size: 14px

// To indicate a successful match ...
// ... the colors of some elements are changed to green:

.success #green-background
	opacity: 1

.success .field-container .anagram-field
	color: darken($darkest-green, 40%)
	-webkit-box-shadow: 2px 2px 3px $darkest-green
	background: $lightest-green

.success .suggestions
	color: $lightest-green
	opacity: 0 // We don't need any suggestions on success. Fade them out.

#find
	opacity: 0
	display: none

.success #validate
	opacity: 0
	display: none
.success #find
	opacity: 1
	display: inherit

